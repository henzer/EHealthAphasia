<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#2196F3"/>
        </shape>
    </item><!-- pressed -->

    <item android:state_focused="true">
