<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.al.ehealth.Results"
    android:orientation="vertical"
    android:background="@drawable/selected_color_button_cancel"

    >

    <TextView
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultados"
        android:id="@+id/textView"
        style="@style/AppTheme.TextResult"
        android:textSize="50dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puntaje en Videos: "
        android:id="@+id/textView2"
        style="@style/AppTheme.TextResult"/>

    <TextView
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puntaje en Tokens: "
        android:id="@+id/textView3"
        style="@style/AppTheme.TextResult"/>

    <TextView
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puntaje en Operaciones: "
        android:id="@+id/textView4"
        style="@style/AppTheme.TextResult" />

    <Button
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        android:id="@+id/reset"
        style="@style/AppTheme.ButtonOption"/>
</LinearLayout>
